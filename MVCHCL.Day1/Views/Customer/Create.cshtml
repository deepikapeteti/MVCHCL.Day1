@model MVCHCL.Day1.Models.Customer
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(c => c.customername)
            @Html.TextBoxFor(c => c.customername, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(c=>c.customername)
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.City)
            @Html.TextBoxFor(c => c.City, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(c=>c.City)
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.BirthDate)
            @Html.TextBoxFor(c => c.BirthDate, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(c=>c.BirthDate)
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Gender)
            @*@Html.DropDownList("Gender")*@
            @Html.DropDownListFor(c=>c.Gender,ViewBag.Gender as SelectList, new { @class="form-control"})
            @Html.ValidationMessageFor(c=>c.Gender)
           
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.MembershipType)
            @*@Html.DropDownList("MembershipTypeId")*@
            @Html.DropDownListFor(c=>c. MembershipTypeId,ViewBag.MembershipTypeId as SelectList,new { @class="form-control"})
            @Html.ValidationMessageFor(c=>c.MembershipTypeId)
           
        </div>
        <div class="form-group">
            <input type="submit" name="cmdsubmit" value="Submit" class="btn btn-primary"/>   
        </div>
        @*<div>
                <lable>
                    Date
                </lable>
                <input type="date" id="txtdate" />
            </div>*@
    }
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")}

